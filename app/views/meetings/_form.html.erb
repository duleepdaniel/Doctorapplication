<%= form_with(model: meeting, local: true) do |form| %>
  <% if meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name,placeholder: "Purpose of the Appointment",class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time,{},{class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time,{},class: "form-control" %>
  </div>
  <% if has_role?(:admin)%>
    <div class="form-group">
    <%= form.label :User %>
    <%= form.grouped_collection_select( :user_id,Role.where.not(name:'nurse'),:users,:name,:id,:email,{include_blank: false}, {class: 'form-control '})%>
    </div>
  <div class="form-group">
      <%= form.label "patient-ID" %>
      <%= form.grouped_collection_select :patient_id,User.with_any_role(:admin,:doctor),:patients,:email,:id,:name,{include_blank: false},{class: 'form-control'}%>  
  </div>
  <% elsif has_role?(:doctor) %>
    <div class="form-group">
      <%= form.label "patient-ID" %>
      <%= form.select :patient_id, current_user.patients.all.pluck(:id),{value_method: :id},{class: " form-control"}%>  
  </div>
  <% end %>
  <div class="actions">
    <%= form.submit  class: "btn btn-primary" %>
  </div>
<% end %>
